#include <stdio.h>
int main()
{
    int n, i, s, j;
    printf("Enter number of rows: ");
    scanf("%d", &n);  

    for(i = 0; i <= n; i++)
    {
        
        for(s = 1; s <= i; s++)
        {
            printf(" ");
        }
        
        for(j = 1; j <= n-i; j++)
        {
            printf("*");
        }
        printf("\n");
    }
    return 0;
}
